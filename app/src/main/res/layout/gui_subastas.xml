<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/usd_userfoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/imgenproducto"
                android:src="@drawable/baldosacentral1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/imgenproducto"
                android:src="@drawable/baldosacentral2" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/usd_txtnickname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/naranjado_1"
        android:padding="@dimen/padding_small"
        android:text="@string/subrecientes"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blanco"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lvsubastas"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>